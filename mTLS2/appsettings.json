{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Certificates": {
      "Default": {
        "Path": "Keys/myCA.pfx",
        // Password should be set via User Secrets (for local development)
        // or Environment Variables (for deployed environments, e.g., Kestrel__Certificates__Default__Password)
        // "Password": "your_certificate_password" 
      }
    }
  }
}
